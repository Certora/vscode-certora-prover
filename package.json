{
  "name": "vscode-certora-prover",
  "displayName": "Certora IDE",
  "description": "Check and validate smart contracts in VS Code",
  "publisher": "Certora",
  "version": "0.0.2",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/Certora/vscode-certora-prover"
  },
  "homepage": "https://github.com/Certora/vscode-certora-prover/blob/main/README.md",
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Testing"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension/extension.js",
  "contributes": {
    "views": {
      "results": [
        {
          "type": "webview",
          "id": "results",
          "name": "Results"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "results",
          "title": "Results",
          "icon": "/media/extension-icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "certora.runScript",
        "title": "Run Script",
        "category": "Certora",
        "icon": "$(play)"
      },
      {
        "command": "certora.createConfFile",
        "title": "Create conf file",
        "category": "Certora",
        "icon": "$(settings)"
      },
      {
        "command": "certora.editConfFile",
        "title": "Edit conf file",
        "category": "Certora",
        "icon": "$(edit)"
      },
      {
        "command": "certora.clearResults",
        "title": "Clear Results",
        "category": "Certora",
        "icon": "$(close)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "certora.runScript",
          "when": "focusedView == results"
        },
        {
          "command": "certora.clearResults",
          "when": "focusedView == results"
        }
      ],
      "view/title": [
        {
          "command": "certora.runScript",
          "when": "view == results",
          "group": "navigation"
        },
        {
          "command": "certora.clearResults",
          "when": "view == results",
          "group": "navigation"
        },
        {
          "command": "certora.createConfFile",
          "when": "view == results",
          "group": "navigation"
        },
        {
          "command": "certora.editConfFile",
          "when": "view == results",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "npm run build:svelte && tsc -p ./src/extension",
    "watch": "tsc -watch -p ./src/extension",
    "pretest": "yarn run compile",
    "build:svelte": "rollup -c",
    "dev:svelte": "rollup -c -w",
    "typecheck:svelte": "svelte-check --tsconfig ./src/results/tsconfig.json"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.26",
    "@vscode/webview-ui-toolkit": "^0.8.4",
    "axios": "^0.24.0",
    "lodash.uniqby": "^4.7.0",
    "nanoid": "^3.1.30",
    "svelte-collapse": "^0.1.1",
    "svelte-select": "^4.4.7"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-typescript": "^8.2.5",
    "@tsconfig/svelte": "^2.0.1",
    "@types/glob": "^7.1.3",
    "@types/lodash.uniqby": "^4.7.6",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^36.0.0",
    "glob": "^7.1.7",
    "lint-staged": "^11.1.2",
    "mocha": "^8.4.0",
    "postcss": "^8.3.6",
    "postcss-html": "^1.3.0",
    "postcss-nested": "^5.0.6",
    "prettier": "^2.4.1",
    "prettier-plugin-svelte": "^2.4.0",
    "rollup": "^2.56.3",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "scss": "^0.2.4",
    "simple-git-hooks": "^2.6.1",
    "stylelint": "^14.1.0",
    "stylelint-config-html": "^1.0.0",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-prettier": "^2.0.0",
    "svelte": "^3.42.6",
    "svelte-check": "^2.2.6",
    "svelte-preprocess": "^4.9.4",
    "tslib": "^2.3.1",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "prettier",
      "plugin:prettier/recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
      "security",
      "node",
      "unicorn",
      "@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "env": {
      "node": true,
      "es6": true,
      "browser": true
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "globals": {
      "vscode": "readonly",
      "mediaPath": "readonly"
    },
    "rules": {
      "camelcase": "off"
    }
  },
  "eslintIgnore": [
    "node_modules",
    "out"
  ],
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "endOfLine": "auto",
    "svelteSortOrder": "options-scripts-markup-styles",
    "svelteBracketNewLine": true
  },
  "stylelint": {
    "extends": [
      "stylelint-config-html/svelte",
      "stylelint-prettier/recommended",
      "stylelint-config-idiomatic-order",
      "stylelint-config-standard"
    ],
    "rules": {
      "custom-property-empty-line-before": "never",
      "declaration-colon-newline-after": null,
      "string-quotes": "single",
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.{js,ts,svelte}": "prettier --write"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
