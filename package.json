{
  "name": "vscode-certora-prover",
  "displayName": "Certora IDE",
  "description": "Check and validate smart contracts in VS Code",
  "publisher": "Certora",
  "version": "0.0.2",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/Certora/vscode-certora-prover"
  },
  "homepage": "https://github.com/Certora/vscode-certora-prover/blob/main/README.md",
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Testing"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension/extension.js",
  "contributes": {
    "configuration": [
      {
      "title": "Solc compiler defaults",
      "order": 0,
      "properties": {
        "CompilerFolder": {
          "type": "string",
          "description": "Folder containing solc compiler binary file.\nNeed to supply if not part of path.",
          "order": 0
        },
        "SolcExecutable": {
          "type": "string",
          "default": "solc",
          "pattern": "^[A-Za-z0-9.\\-\\_]{0,20}$",
          "patternErrorMessage": "Supported characters for an executable name are letters, numbers, dots, hyphens, and underscores. \n\nPlease note the filename should be limited to 20 characters.",
          "description": "The default executable used to compile solidity code (default is solc).",
          "order": 1
        }
      }
    },
    {
      "title": "Compiler Advanced Settings",
      "order": 1,
      "properties": {
        "SolidityArguments": {
          "markdownDescription": "A list of arguments to pass to the Solidity compiler.\nThe arguments will be passed as is, without any formatting, in the same order.\n\n**Example:**\n\n```js\n['--optimize', '--optimize-runs', '200']\n```",
          "type": "string",
          "pattern": "^(\\[(\\'.+\\',(\\s?))*((\\'.+\\')*)\\])*$",
          "patternErrorMessage": "Input must be an array of string commands",
          "order": 0
        },
        "Solidity.DefaultDirectoryForPackagesDependencies": {
          "description": "Default path for relative input.",
          "type": "string",
          "default": "node_modules",
          "order": 1
        },
        "SolidityPackageDirectories": {
          "markdownDescription": "For each package, the path to a directory including that Solidity package.\n\n**When to use it?**\n\nBy default we look for the packages in default directory. Set here if there are packages are in several different directory.\n\nValue should be a mapping between a package name and the path to the directory the package is at.\n\n**Example:**\n```\n{'package.name': '.../path'}```",
          "type": "object",
          "additionalProperties": "string",
          "properties": {},
          "order": 2
        }
      }
    },
    {
    "title": "Prover defaults",
    "order": 2,
      "properties": {
        "OptimisticLoop": {
          "markdownDescription": "Ignore some executions of loop. [Read More](https://docs.certora.com/en/latest/docs/ref-manual/cli/options.html?highlight=--package#optimistic-loop)",
          "type": "boolean",
          "default": false,
          "order": 0
        },
        "LoopUnroll": {
          "markdownDescription": "Maximal number of loop iterations. [Read More](https://docs.certora.com/en/latest/docs/ref-manual/cli/options.html?highlight=--package#loop-iter)",
          "type": "integer",
          "exclusiveMinimum": -1,
          "exclusiveMaximum": 10,
          "default": 1,
          "order": 1
        },
        "Duration": {
          "description": "Maximal execution time per rule (in seconds)",
          "type": "integer",
          "exclusiveMinimum": -1,
          "default": 600,
          "order": 2
        }
      }
  },
  {
    "title": "Prover Advance Settings",
    "order": 3,
    "properties": {
      "AdditionalSetting": {
        "markdownDescription": "[Additional settings explanation](https://docs.certora.com/en/latest/docs/ref-manual/cli/options.html?highlight=option)\n\n**Example:**\n\n```solver: z3```",
        "type": "object",
        "order": 0,
        "additionalProperties": "string",
        "properties": {}
      },
      "LocalTypeChecking": {
        "description": "Turning this off implies syntax errors are reported after submitting job to server.",
        "type": "boolean",
        "default": true,
        "order": 1
      },
      "Staging": {
        "description": "Run on staging environment",
        "type": "boolean",
        "order": 2
      },
      "Branch": {
        "type": "string",
        "default": "master",
        "order": 3
      }
    }
  }
],
    "views": {
      "results": [
        {
          "type": "webview",
          "id": "results",
          "name": "Results"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "results",
          "title": "Results",
          "icon": "/media/extension-icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "certora.runScript",
        "title": "Run Script",
        "category": "Certora",
        "icon": "$(play)"
      },
      {
        "command": "certora.createConfFile",
        "title": "Create conf file",
        "category": "Certora",
        "icon": "$(settings)"
      },
      {
        "command": "certora.editConfFile",
        "title": "Edit conf file",
        "category": "Certora",
        "icon": "$(edit)"
      },
      {
        "command": "certora.clearResults",
        "title": "Clear Results",
        "category": "Certora",
        "icon": "$(close)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "certora.runScript",
          "when": "focusedView == results"
        },
        {
          "command": "certora.clearResults",
          "when": "focusedView == results"
        }
      ],
      "view/title": [
        {
          "command": "certora.runScript",
          "when": "view == results",
          "group": "navigation"
        },
        {
          "command": "certora.clearResults",
          "when": "view == results",
          "group": "navigation"
        },
        {
          "command": "certora.createConfFile",
          "when": "view == results",
          "group": "navigation"
        },
        {
          "command": "certora.editConfFile",
          "when": "view == results",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "npm run build:svelte && tsc -p ./src/extension",
    "watch": "tsc -watch -p ./src/extension",
    "pretest": "yarn run compile",
    "build:svelte": "rollup -c",
    "dev:svelte": "rollup -c -w",
    "typecheck:svelte": "svelte-check --tsconfig ./src/results/tsconfig.json"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.26",
    "@vscode/webview-ui-toolkit": "^0.8.4",
    "axios": "^0.24.0",
    "lodash.uniqby": "^4.7.0",
    "nanoid": "^3.1.30"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-typescript": "^8.2.5",
    "@tsconfig/svelte": "^2.0.1",
    "@types/glob": "^7.1.3",
    "@types/lodash.uniqby": "^4.7.6",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^36.0.0",
    "glob": "^7.1.7",
    "lint-staged": "^11.1.2",
    "mocha": "^8.4.0",
    "postcss": "^8.3.6",
    "postcss-html": "^1.3.0",
    "postcss-nested": "^5.0.6",
    "prettier": "^2.4.1",
    "prettier-plugin-svelte": "^2.4.0",
    "rollup": "^2.56.3",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "simple-git-hooks": "^2.6.1",
    "stylelint": "^14.1.0",
    "stylelint-config-html": "^1.0.0",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-prettier": "^2.0.0",
    "svelte": "^3.42.6",
    "svelte-check": "^2.2.6",
    "svelte-preprocess": "^4.9.4",
    "tslib": "^2.3.1",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "prettier",
      "plugin:prettier/recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
      "security",
      "node",
      "unicorn",
      "@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "env": {
      "node": true,
      "es6": true,
      "browser": true
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "globals": {
      "vscode": "readonly",
      "mediaPath": "readonly"
    },
    "rules": {
      "camelcase": "off"
    }
  },
  "eslintIgnore": [
    "node_modules",
    "out"
  ],
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "endOfLine": "auto",
    "svelteSortOrder": "options-scripts-markup-styles",
    "svelteBracketNewLine": true
  },
  "stylelint": {
    "extends": [
      "stylelint-config-html/svelte",
      "stylelint-prettier/recommended",
      "stylelint-config-idiomatic-order",
      "stylelint-config-standard"
    ],
    "rules": {
      "custom-property-empty-line-before": "never",
      "declaration-colon-newline-after": null,
      "string-quotes": "single",
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.{js,ts,svelte}": "prettier --write",
    "*.svelte": "stylelint --ip *.md src/**/*.svelte --fix"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
